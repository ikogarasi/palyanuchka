@model CartDto

<form method="post">
    <h class="text-bg-danger">@ViewBag.ErrorMessage</h>
    <br />
    <div class="">
        <div class="card border mt-4 container">
            <div class="card-header bg-dark text-light ml-0 row ">
                <div class="col-6">
                    <i class="fa fa-shopping-cart"></i> &nbsp;
                    Shopping Cart
                </div>
                <div class="col-6 text-end">
                    <a class="btn btn-outline-warning btn-sm">Continue Shopping</a>
                </div>
            </div>
            <div class="card-body">
                <div class=" d-none d-lg-block">
                    <div class="row text-info">
                        <div class="col-lg-2">
                        </div>
                        <div class="col-lg-5">
                            Product Details
                        </div>
                        <div class="col-lg-2">
                            Price
                        </div>
                        <div class="col-lg-2">
                            Count
                        </div>
                        <div class="col-lg-1">
                        </div>
                    </div>
                </div>

                <hr />

                @foreach(var each in Model.CartDetails)
                {
                    <div class="row h-100">
                        <div class="col-4 col-md-2 text-center py-2">
                            <img src="@each.Product.ImageURL" class="rounded" style="width:100%" />
                        </div>
                        <div class="col-8 col-md-5">
                            <h5>@each.Product.ProductName</h5>
                            <div style="font-size:11px;">@each.Product.ProductDescription</div>
                        </div>
                        <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                            <span style="font-size:17px;"> @each.Product.Price</span>
                        </div>
                        <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                            <span style="font-size:17px;"> @each.Count</span>
                        </div>
                        <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                            <a class="btn btn-outline-danger" asp-action="RemoveFromCart" asp-route-cartId="@each.CartDetailsId">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                    <hr />
                }
                <div class="row">
                    <div class="col-6">
                        @if (string.IsNullOrEmpty(Model.CartHeader.CouponCode))
                        {
                            <span>Coupon:</span>
                            <input asp-for="CartHeader.CouponCode" />
                            <button type="submit" asp-action="ApplyCoupon" class="btn btn-success"> Apply </button>
                        }
                        else
                        {
                            <span>Coupon:</span>
                            <input asp-for="CartHeader.CouponCode" disabled/>
                            <button type="submit" asp-action="RemoveCoupon" class="btn btn-danger"> Remove </button> 
                            <span class="text-danger">(@String.Format("{0:C}", Model.CartHeader.DiscountTotal) discount)</span>
                        }
                    </div>
                    <div class="col-6 text-end">
                        <span class="text-danger" style="font-size:21px;">  Order Total : @String.Format("{0:C2}", Model.CartHeader.OrderTotal) <br /></span>
                    </div>
                </div>
            </div>
            <div class="card-footer row">
                <div class="col-6 col-md-3 offset-md-6">
                </div>
                <div class="col-6 col-md-3">
                    <a class="btn btn-success form-control" asp-action="Checkout">
                        <span>Checkout</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
