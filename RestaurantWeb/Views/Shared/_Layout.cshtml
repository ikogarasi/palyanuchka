<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantWeb</title>
    <link rel="stylesheet" href="~/lib/bootswatch/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantWeb.styles.css" asp-append-version="true" />
</head>
<body>
    @if (User.IsInRole("Admin"))
    {
        <partial name="_AdminHeader" />
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Palyanuchka</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="User" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="User" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link text-light dropdown-toggle">
                                <i class="fa-solid fa-cart-shopping"></i>
                            </a>
                            <div class="dropdown-menu" style="width: 400px">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="container" id="dropdown_content">
                                        <!--cart data here-->
                                    </div>
                                    <hr class="dropdown-divivder" id="dropdown_divider"/>
                                    <div class="container" id="dropdown_divider">
                                        <div class="col">
                                            <a class="btn btn-success" id="buybtn" asp-area="User" asp-controller="Cart" asp-action="Index">
                                                Manage
                                            </a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="container" style="text-align:center">
                                        <div class="col">
                                            <span>Have not already authenticated? </span>
                                            <a class="btn btn-outline-info">
                                                Login
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - RestaurantWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/3b4cdf30d5.js" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
